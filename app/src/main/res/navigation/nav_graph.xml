<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SplashFragment">

    <fragment
        android:id="@+id/SplashFragment"
        android:name="com.example.habitmanager.ui.SplashFragment"
        android:label="@string/splash_fragment_label"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/MainFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/MainFragment"
        android:name="com.example.habitmanager.ui.MainFragment"
        android:label="@string/main_fragment_label"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_MainFragment_to_habitListFragment"
            app:destination="@id/habitListFragment" />
        <action
            android:id="@+id/action_MainFragment_to_aboutUsFragment"
            app:destination="@id/aboutUsFragment" />
    </fragment>
    <fragment
        android:id="@+id/habitListFragment"
        android:name="com.example.habitmanager.ui.HabitListFragment"
        android:label="fragment_habit_list"
        tools:layout="@layout/fragment_habit_list" >
        <action
            android:id="@+id/action_habitListFragment_to_addHabitFragment"
            app:destination="@id/addHabitFragment" />
        <action
            android:id="@+id/action_habitListFragment_to_editHabitFragment"
            app:destination="@id/editHabitFragment" />
        <action
            android:id="@+id/action_habitListFragment_to_habitViewFragment"
            app:destination="@id/habitViewFragment" />
        <action
            android:id="@+id/action_habitListFragment_to_aboutUsFragment"
            app:destination="@id/aboutUsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addHabitFragment"
        android:name="com.example.habitmanager.ui.AddHabitFragment"
        android:label="fragment_add_habit"
        tools:layout="@layout/fragment_add_habit" >
        <action
            android:id="@+id/action_addHabitFragment_to_habitListFragment"
            app:destination="@id/habitListFragment"
            app:popUpTo="@id/habitListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/editHabitFragment"
        android:name="com.example.habitmanager.ui.EditHabitFragment"
        android:label="fragment_edit_habit"
        tools:layout="@layout/fragment_edit_habit" >
        <action
            android:id="@+id/action_editHabitFragment_to_habitListFragment"
            app:destination="@id/habitListFragment"
            app:popUpTo="@id/habitListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/habitViewFragment"
        android:name="com.example.habitmanager.ui.HabitViewFragment"
        android:label="HabitViewFragment" >
        <action
            android:id="@+id/action_habitViewFragment_to_habitListFragment"
            app:destination="@id/habitListFragment"
            app:popUpTo="@id/habitListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.example.habitmanager.ui.AboutUsFragment"
        android:label="fragment_about_us"
        tools:layout="@layout/fragment_about_us" />
</navigation>