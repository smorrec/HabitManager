<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SplashFragment">

    <fragment
        android:id="@+id/SplashFragment"
        android:name="com.example.habitmanager.ui.SplashFragment"
        android:label="@string/splash_fragment_label"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/MainFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/MainFragment"
        android:name="com.example.habitmanager.ui.MainFragment"
        android:label="@string/main_fragment_label"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_MainFragment_to_habitListFragment"
            app:destination="@id/habitListFragment" />
        <action
            android:id="@+id/action_MainFragment_to_aboutUsFragment"
            app:destination="@id/aboutUsFragment" />
    </fragment>
    <fragment
        android:id="@+id/habitListFragment"
        android:name="com.example.habitmanager.ui.habit.HabitListFragment"
        android:label="fragment_habit_list"
        tools:layout="@layout/fragment_habit_list" >
        <action
            android:id="@+id/action_habitListFragment_to_habitViewFragment"
            app:destination="@id/habitViewFragment" />
        <action
            android:id="@+id/action_habitListFragment_to_aboutUsFragment"
            app:destination="@id/aboutUsFragment" />
        <action
            android:id="@+id/action_habitListFragment_to_habitManagerFragment"
            app:destination="@id/habitManagerFragment" />
        <action
            android:id="@+id/action_habitListFragment_to_baseFragmentDialog"
            app:destination="@id/baseFragmentDialog" />
    </fragment>
    <fragment
        android:id="@+id/habitViewFragment"
        android:name="com.example.habitmanager.ui.habit.HabitViewFragment"
        android:label="HabitViewFragment" >
        <action
            android:id="@+id/action_habitViewFragment_to_habitListFragment"
            app:destination="@id/habitListFragment"
            app:popUpTo="@id/habitListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.example.habitmanager.ui.AboutUsFragment"
        android:label="fragment_about_us"
        tools:layout="@layout/fragment_about_us" />
    <fragment
        android:id="@+id/habitManagerFragment"
        android:name="com.example.habitmanager.ui.habit.HabitManagerFragment"
        android:label="HabitManagerFragment" />
    <dialog
        android:id="@+id/baseFragmentDialog"
        android:name="com.example.habitmanager.ui.base.BaseFragmentDialog"
        android:label="BaseFragmentDialog" />
</navigation>